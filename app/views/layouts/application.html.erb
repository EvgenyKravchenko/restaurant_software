<!DOCTYPE html>
<html>
<head>

  <title>RestaurantSoftware</title>
  <%= stylesheet_link_tag    @role, :media => "all" %>
  <%= javascript_include_tag @role %>
  <%= csrf_meta_tags %>
  <script>


<% @groups = Group.all %>
<% @categories = Category.all %>
<% @items = Item.all %>
<% @groupsJSON = @groups.to_json(:only => [:name])  %>
<% @categoriesJSON = @categories.to_json(:only => [:name, :attachment ])  %>
<% @itemsJSON = @items.to_json(:only => [:name, :attachment, :price, :description])  %>


window.Waiter.Menu.Groups = <%= @groupsJSON.html_safe %>;
window.Waiter.Menu.Categories = <%= @categoriesJSON.html_safe %>;
window.Waiter.Menu.Items = <%= @itemsJSON.html_safe %>;

  </script>
</head>
<body>
<%if user_signed_in? %>
    Welcome <%= current_user.username%>
    <%= link_to 'Sign out', destroy_user_session_path %>
<% else %>
    
    <%= link_to "Sign in", new_user_session_path %> 
<% end %>
<%= yield %>

</body>
</html>

