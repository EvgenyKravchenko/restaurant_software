<% @waiters.each do |waiter| %>
  <tr>
    <td><%= waiter.id %></td>
    <td><%= waiter.integer %></td>
    <td><%= waiter.name %></td>
    <td><%= waiter.login %></td>
    <td><%= waiter.password %></td>
    <td><%= link_to 'Show', waiter %></td>
    <td><%= link_to 'Edit', edit_waiter_path(waiter) %></td>
    <td><%= link_to 'Destroy', waiter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

